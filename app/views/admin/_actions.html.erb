<%= link_to image_tag("icons/view_16.png", :alt => "Show"), :id => content.id, :action => "show" %>
<% if content.published? %>
	<%= link_to image_tag("icons/unpublish_16.png", :alt => "Unpublish"), :id => content.id, :action => "unpublish" %>
<% else %>
	<%= link_to image_tag("icons/publish_16.png", :alt => "Publish"), :id => content.id, :action => "publish" %>
<% end %>
<%= link_to image_tag("icons/edit_16.png", :alt => "Edit"), :id => content.id, :action => "edit" %>
<%# FIXME: Deleting doesn't work properly! %>
<%= link_to image_tag("icons/delete_16.png", :alt => "Destroy"), polymorphic_url(content), :confirm => 'Are you sure?', :method => :delete %>