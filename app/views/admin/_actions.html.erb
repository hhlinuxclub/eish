<%= link_to image_tag("icons/view_16.png", :alt => "Show"), { :id => content.id, :action => "show" }, { :title => "Show" } %>
<% if defined? content.published %>
	<% if content.published? %>
		<%= link_to image_tag("icons/unpublish_16.png", :alt => "Unpublish"), { :id => content.id, :action => "unpublish" }, { :title => "Unpublish" } %>
	<% else %>
		<%= link_to image_tag("icons/publish_16.png", :alt => "Publish"), { :id => content.id, :action => "publish" }, { :title => "Publish" } %>
	<% end %>
<% end %>
<%= link_to image_tag("icons/edit_16.png", :alt => "Edit"), { :id => content.id, :action => "edit" }, { :title => "Edit" } %>
<%= link_to image_tag("icons/delete_16.png", :alt => "Destroy"), polymorphic_url([:admin, content]), :confirm => 'Are you sure?', :method => :delete, :title => "Delete" %>