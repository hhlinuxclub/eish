<h2 class="title">Settings</h2>

<% form_tag :action => "update" do %>
	<h3 class="title">Site name<span class="notice">Requires restart</span></h3>
	<p>
		<%= label :settings, :sitename, "Site name" %><br />
		<%= text_field_tag "settings[site_name]", @site_name, :size => 60 %>
	</p>

	<h3 class="title">Welcome Message</h3>
	<p>
		<%= text_area_tag "settings[welcome_message]", @welcome_message, :cols => 85, :rows => 10 %>
	</p>
	
	<h3 class="title">ReCAPTCHA<span class="notice">Requires restart</span></h3>
	<p>
		<%= check_box :settings, :recaptcha_enabled, { :checked => ("checked" if @recaptcha_enabled) }, "t", "f" %>
		<%= label :settings, :recaptcha_enabled, "Enable" %><br />
	</p>
	
	<p>
		<%= label :settings, :recaptcha_public_key, "Public Key" %><br />
		<%= text_field_tag "settings[recaptcha_public_key]", @recaptcha_public_key, :size => 60 %>
	</p>
	
	<p>
		<%= label :settings, :recaptcha_private_key, "Private Key" %><br />
		<%= text_field_tag "settings[recaptcha_private_key]", @recaptcha_private_key, :size => 60 %>
	</p>
	
	<h3 class="title">Google Analytics<span class="notice">Requires restart</span></h3>
	<p>
		<%= check_box :settings, :google_analytics_enabled, { :checked => ("checked" if @google_analytics_enabled) }, "t", "f" %>
		<%= label :settings, :google_analytics_enabled, "Enable" %><br />
	</p>
	
	<p>
		<%= label :settings, :google_analytics_tracker_id, "Tracker ID" %><br />
		<%= text_field_tag "settings[google_analytics_tracker_id]", @google_analytics_tracker_id, :size => 20 %>
	</p>
	
	<h3 class="title">Search<span class="notice">Requires restart</span></h3>
	<% unless XAPIT_GEM_LOADED %>
		<p>You need to uncomment <strong>config.gem "xapit"</strong> from <em>config/environment.rb</em> to be able to enable search.</p>
	<% end %>
	<p>
		<%= check_box :settings, :search_enabled, { :checked => ("checked" if @search_enabled), :disabled => ("disabled" unless XAPIT_GEM_LOADED )}, "t", "f" %>
		<%= label :settings, :search_enabled, "Enable" %><br />
	</p>
	
	<h3 class="title">HTTPS<span class="notice">Requires restart</span></h3>
	<p>
		<%= check_box :settings, :https_enabled, { :checked => ("checked" if @https_enabled) }, "t", "f" %>
		<%= label :settings, :https_enabled, "Enable" %><br />
	</p>
	
	<h3 class="title">Footer<span class="notice">Requires restart</span></h3>
	<p>
		<%= text_area_tag "settings[footer]", @footer, :cols => 85, :rows => 10 %>
	</p>
	
	<p>
		<%= submit_tag "Save" %>
	</p>
<% end %>