<h2 class="title">Editing news article</h2>

<% form_for(:news_article, @news_article, :controller => "admin/news", :url => { :action => "update"}, :html => { :method => :put, :multipart => true }) do |f| %>
  <%= f.error_messages %>

	<% if @preview %>
		<div id="preview" title="Preview">
			<h1><%= @preview.title %></h1>
			<%= textilize @preview.body %>
		</div>
	<% end %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "titleField", :size => 39 %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 85, :rows => 20, :class => "textile" %>
  </p>

  <p>
    <%= f.submit "Update" %>
		<%= submit_tag "Preview", :name => "preview" %>
  </p>

<div id="tabs">
	<ul>
		<li><a href="#assetsBox">Assets</a></li>
	</ul>
	<%= render :partial => "admin/assets/assets", :locals => { :assetable => @news_article } %>
</div>
<% end %>

<div id="preview" title="Preview">
</div>
