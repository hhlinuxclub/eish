<% form_for [:admin, @news_article] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "titleField", :size => 39 %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body, :cols => 85, :rows => 20, :class => "resizable" %>
  </p>

  <p>
    <%= f.submit submit_value ||= "Submit" %>
		<%= preview_button "/admin/news/preview", :title => "news_title", :body => "news_body" %>
  </p>
<% end %>

<div id="preview" title="Preview">
</div>
