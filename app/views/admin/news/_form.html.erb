<%= render :partial => "admin/form_js" %>

<% form_for [:admin, @news_article] do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :class => "titleField", :size => 39 %>
  </p>

  <p>
    <%= f.label :body %><br />
    <span id="textileEditor">
       <%= f.textile_editor :body, :cols => 85, :rows => 20, :class => "resizable" %>
    </span>
  </p>

  <p>
    <%= f.submit submit_value ||= "Submit" %>
		<%= button_to_remote "Preview", :url => { :action => "preview" }, :update => "preview", :method => :post, :with => "'title=' + $('#news_title').val() + '&amp;body=' + $('#news_body').val()" %>
  </p>
<% end %>

<div id="preview" title="Preview">
</div>