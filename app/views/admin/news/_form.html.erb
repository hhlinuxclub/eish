<% form_for [:admin, @news_article], :html => { :multipart => true } do |f| %>
	<div id="editArea">
  	<%= f.error_messages %>

		<% if params[:preview] %>
			<div id="preview" title="Preview">
				<h1><%= @news_article.title %></h1>
				<%= textilize @news_article.body %>
			</div>
		<% end %>

	  <p>
	    <%= f.label :title %><br />
	    <%= f.text_field :title, :class => "titleField", :size => 39 %>
	  </p>

	  <p>
	    <%= f.label :body %><br />
	    <%= f.text_area :body, :cols => 85, :rows => 20, :class => "textile" %>
	  </p>
	</div>
	
	<div id="sidebar">
	  <%= render :partial => "admin/actions", :locals => { :f => f, :item => @news_article } %>
	</div>

<%= render :partial => "admin/assets/assets", :locals => { :assetable => @news_article } %>

<% end %>