<h2 class="title">Events</h2>

<p><%= link_to "Add event", new_admin_event_path, :class => 'add' %></p>

<table>
	<tr>
		<th>Name</th>
		<th>Start</th>
		<th>End</th>
		<th>Location</th>
		<th>Description</th>
		<th>Actions</th>
	</tr>

<% for event in @events %>
	<tr<%= " class=\"unpublished\"" unless event.published? %>>
		<td><%=h event.name %></td>
		<td><%=h event.starts_at %></td>
		<td><%=h event.ends_at %></td>
		<td><%=h event.location %></td>
		<td><%=h event.description %></td>
		<td>
			<%= link_to image_tag("icons/show.png", :alt => "Show"), admin_event_path(event) %>
	    <%= link_to image_tag("icons/edit.png", :alt => "Edit"), edit_admin_event_path(event) %>
	    <%= link_to image_tag("icons/destroy.png", :alt => "Destroy"), admin_event_path(event), :confirm => 'Are you sure?', :method => :delete %>
		</td>
	</tr>
<% end %>
</table>
