<script type="text/javascript">
 /* jQuery textarea resizer plugin usage */
	$(document).ready(function() {
		$('textarea.resizable:not(.processed)').TextAreaResizer();
	});
</script>

<% form_for [:admin, @event] do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name, :class => "titleField", :size => 39  %>
	</p>
	
	<p>
		<%= f.label :starts_at %><br />
		<%= datetime_select :event, :starts_at, :order => [:day, :month, :year], :start_year => Time.now.year %>
	</p>
	
	<p>
		<%= f.label :ends_at %><br />
		<%= datetime_select :event, :ends_at, :order => [:day, :month, :year], :start_year => Time.now.year %>
	</p>
	
	<p>
		<%= f.check_box :all_day %> <%= f.label :all_day %>
	</p>
	
	<p>
		<%= f.label :location %><br />
		<%= f.text_field :location %> <%= f.check_box :is_address %> <%= f.label :is_address, "Address" %>
	</p>
	
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description, :cols => 85, :rows => 10, :class => "resizable"  %>
	</p>
	
	<p>
		Clicking "Create" will save the event but won't publish it.<br />
		Please review it in the next page.
	</p>
	
	<p>
		<%= f.submit submit_value ||= "Submit" %>
	</p>
<% end %>
