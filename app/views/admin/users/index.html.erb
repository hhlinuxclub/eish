<h2 class="title">Users</h2>

<p><%= link_to "Add user", new_admin_user_path, :class => 'add' %></p>

<form>
	<label for="actions">Actions:</label> 	<select name="actions">
									<option value="delete">Delete</option>
									<option value="something">Something</option>
									<option value="else">Else</option>
								</select>
<table>
	<tr>
		<th></th>
		<th>User</th>
		<th>Email</th>
		<th>Role</th>
		<th>Contactable?</th>
	</tr>

<% for user in @users %>
	<tr class="<%= cycle("odd", "even") %>">
		<td class="radio"><input type="radio" name="user" value="<%=h user.id %>" /></td>
		<td><%= link_to user.username, { :id => user.id, :action => "edit" }, { :title => "Edit", :class => "listingTitle" } %><br />
	    		<%=h user.last_name %>, <%=h user.first_name %>
	    </td>
		<td style="text-align: center;"><%=h user.email %></td>
		<td style="text-align: center;"><%=h user.role.name %></td>
		<td style="text-align: center;"><%=h user.contactable %></td>
	</tr>
<% end %>

</table>
</form>

