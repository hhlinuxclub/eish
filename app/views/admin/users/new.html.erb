<% form_for [:admin, @user] do |f| %>
	<%= f.error_messages %>
	
	<p>
		<%= f.label :first_name %>
		<br />
		<%= f.text_field :first_name, :size => 40 %>
	</p>
	
	<p>
		<%= f.label :last_name %>
		<br />
		<%= f.text_field :last_name, :size => 40 %>
	</p>
	
	<p>
		<%= f.label :username %>
		<br />
		<%= f.text_field :username, :size => 40 %>
	</p>
	
	<p>
		<%= f.label :email %>
		<br />
		<%= f.text_field :email, :size => 40 %>
	</p>
	
	<p>
		<%= f.label :password %>
		<br />
		<%= f.password_field :password, :size => 40 %>
	</p>
	
	<p>
		<%= f.label :password_confirmation %>
		<br />
		<%= f.password_field :password_confirmation, :size => 40 %>
	</p>
	
	<p>
		<%= f.label :role %>
		<br />
		<%= collection_select(:user, :role_id, Role.find(:all), :id, :name) %>
	</p>
	
	<p>
		<%= f.check_box :contactable %>
		<%= f.label :contactable %>
	</p>
	
	<p>
		<%= f.submit "Add user", :class => "submit" %>
	</p>
<% end %>
