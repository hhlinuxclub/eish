<p style="text-align: center;">
	<%= cloudify(@categories) %>
</p>

<% for article in @articles %>
	<div class="article">
		<%= image_tag article.image.upload.url(:square), :alt => article.image.description, :class => "image" unless article.image.nil? %>
		<h3 class="title"><%= link_to article.title, article_path(article) %></h3>
		<p class="metadata">
			<%=h distance_of_time_in_words(article.created_at, Time.now) %> ago
			by <%= link_to_profile article.user %>
		</p>
		<p><%=h article.description %></p>
	</div>
<% end %>
