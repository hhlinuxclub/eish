<% title "User Registration" %>

<h2 class="title"></h2>

<% form_for :user, @user, :url => { :action => "create" } do |f| %>
	<%= f.error_messages %>

	<p>
		<%= f.label :first_name %>
		<br />
		<%= f.text_field :first_name, :size => 30, :tabindex => 1, :class => "bigInput" %>
	</p>

	<p>
		<%= f.label :last_name %>
		<br />
		<%= f.text_field :last_name, :size => 30, :tabindex => 2, :class => "bigInput"  %>
	</p>

	<p>
		<%= f.label :email %>
		<br />
		<%= f.text_field :email, :size => 30, :tabindex => 3, :class => "bigInput"  %>
	</p>

	<p>
		<%= f.label :username, "Desired Username" %>
		<br />
		<%= f.text_field :username, :size => 30, :tabindex => 4, :class => "bigInput"  %>
	</p>

	<p>
		<%= f.label :password %>
		<br />
		<%= f.password_field :password, :size => 30, :tabindex => 5, :class => "bigInput"  %>
	</p>

	<p>
		<%= f.label :password_confirmation %>
		<br />
		<%= f.password_field :password_confirmation, :size => 30, :tabindex => 6, :class => "bigInput"  %>
	</p>

	<p>
		<%= f.submit "Register", :class => "submit", :tabindex => 8, :class => "bigInput" %>
	</p>
<% end %>
