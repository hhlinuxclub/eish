<fieldset>
<legend>Login</legend>
	<% form_tag do %>
		<p>
			<label for="username">Username:</label>
			<%= text_field_tag :username, params[:username] %>
		</p>

		<p>
			<label for="password">Password:</label>
			<%= password_field_tag :password, params[:password] %>
		</p>

		<p>
			<%= submit_tag "Login" %>
		</p>
	<% end %>
</fieldset>